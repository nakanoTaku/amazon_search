<div class="container">
  <div class="row">
    <div class="title">
      <h1>Kindle Unlimited</h1>
    </div>
  </div>
  <div class="row">
    <div class="search-box col-xs-12 col-lg-3">
      <%= form_tag('/', method: :get) do %>
        <%= text_field_tag :book, '', id: "book_search", name: "keyword", placeholder: "キーワードを打ち込んでください", style: "width: 200px;"%><button title="検索" type="submit">検索</button>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="search-result">
      <%= render partial: 'book_list' %>
    </div>
  </div>
</div>
